{
  "name": "poi-finder",
  "version": "1.0.0",
  "description": "AI-powered Point of Interest Finder",
  "main": "dist/server/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/server/main.js",
    "dev": "concurrently \"tsc --watch\" \"nodemon dist/server/main.js\"",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/public && cp -r src/public/*.html src/public/css src/public/js dist/public 2>/dev/null || true",
    "test": "jest",
    "lint": "eslint src/**/*.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.20.1",
    "sqlite3": "^5.1.6",
    "undici-types": "^5.26.5",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.9",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.9.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.5"
  }
} 