{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"lib": ["ES2022", "DOM"],
		"rootDir": "src",
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}